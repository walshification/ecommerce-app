<!DOCTYPE html>
<html>
<head>
  <title>Walsh-Mart</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav id="myNavbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" 
                                                       data-target="#navbarCollapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <a class="navbar-brand" href="/">Walsh-Mart</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="nav navbar-nav">
          <li>
            <a href="/products">
              <span class="glyphicon glyphicon-th-list"></span> Catalog
            </a>
         </li>
          <li>
            <a href="/about">
              <span class="glyphicon glyphicon-info-sign"></span> About
            </a>
          </li>
          <li>
            <a href="/products/new">
              <span class="glyphicon glyphicon-plus"></span> Add Product
            </a>
          </li>
          <li>
            <a href="/products/?feature=discount_items">
              <span class="glyphicon glyphicon-bullhorn"></span> DISCOUNT ITEMS!!!
            </a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <a href="/carted_products">
              <span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart
            </a>
          </li>
          <li>
            <a href="#">
              <span class="glyphicon glyphicon-user"></span> My Account
            </a>
          </li>
          <li>
            <a href="/users/sign_out" data-method="delete" rel="nofollow">
              <span class="glyphicon glyphicon-log-out"></span> Sign Out
            </a>
          </li>
          <% else %>
          <li>
            <a href="/users/sign_up">
              <span class="glyphicon glyphicon-plus"></span> Sign Up
            </a>
          </li>
          <li>
            <a href="/users/sign_in">
              <span class="glyphicon glyphicon-log-in"></span> Have an account?
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container" id="main_content">
    <div class="col-md-12" id="stuff">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
  <div class="container">
   <hr id="footer" align="center">
   <div class="row">
     <div class="col-small-12">
       <footer id="footer">
         <p align="center">Â© Copyright 2014 Christopher Walsh. All Rights Reserved.</p>
       </footer>
     </div>
   </div>
  </div>
</body>
</html>
