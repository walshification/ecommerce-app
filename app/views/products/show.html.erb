<div class="col-md-9" id="stuff">
  <div>
    <h1><%= @product.name %> <small>By: <%= @product.vendor.name %></small></h1>

    <img src="<%= @product.photo %>">
    <ul>
      <% @product.options.each do |option| %>
        <li><%= option.name %>
      <% end %>
    </ul>
    <p><%= @product.description %></p>

    <h2><%= @product.display_price %></h2>
    <p><a href="/products/<%= @product.id %>/edit">Edit</a></p>
    <p><a rel="nofollow" data-method="delete" href="/products/<%= @product.id %>/">Delete</a></p>
  </div>
  <div>
    <%= form_for @carted_product do |f| %>
      <div>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>

        <%= f.hidden_field :product_id, value: @product.id %>
      </div>
      <div>
        <%= f.submit "Add to Cart"%>
      </div>
    <% end %>
  </div>
</div>

<div class="col-md-3" id="shopping-cart">
  <div class="panel panel-default"> 
    <div class="panel-heading"> 
      <h2 class="panel-title"><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h2> 
    </div>
    <div class="panel-body">
      <ul>
        <% @carted_products.each do |carted_product| %>
          <li>x<%= carted_product.quantity %>, <%= carted_product.product.name %>, <%= carted_product.product.price %> each</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

